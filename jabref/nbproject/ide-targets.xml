<?xml version="1.0" encoding="UTF-8"?>
<project basedir=".." name="JabRef-IDE">
    <import file="../build.xml"/>
    <!-- TODO: edit the following target according to your needs -->
    <!-- (more info: http://www.netbeans.org/kb/41/freeform-config.html#debugj2se) -->
    <target depends="build" name="debug-nb">
        <nbjpdastart addressproperty="jpda.address" name="JabRef" transport="dt_socket">
            <classpath refid="classpath"/>
        </nbjpdastart>
        <java classname="net.sf.jabref.JabRef" fork="true">
            <classpath refid="classpath"/>
            <jvmarg value="-Xdebug"/>
            <jvmarg value="-Xnoagent"/>
            <jvmarg value="-Djava.compiler=none"/>
            <jvmarg value="-Xrunjdwp:transport=dt_socket,address=${jpda.address}"/>
        </java>
    </target>
</project>
